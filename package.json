    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "email-templates": "^6.0.3",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6-alpha.5",
    "express-validator": "^6.2.0",
    "fs-extra": "^8.1.0",
    "gravatar": "^1.8.0",
    "heroku-ssl-redirect": "0.0.4",
    "jsonwebtoken": "^8.5.1",
    "mime-types": "^2.1.24",
